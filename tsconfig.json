{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": false,
		"sourceMap": true,
		"outDir": "build",
		"types": ["node", "jest"],
		"lib": ["es2017", "es6"],
    "target": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"extendedDiagnostics": true,
		"experimentalDecorators": true,
    "allowJs": true,
    "checkJs": true,
		"baseUrl": "src",
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"noUnusedLocals": false,
		"noUnusedParameters": true
	},
	"include": [
		"node_modules/@types",
		"@jest/types",
		"src/**/*.ts"
	],
	"exclude": [
    "src/controllers/plan/charge.ts"
	]
}
